{
    "name": "movingimage/mi-comments-bundle",
    "description": "Symfony bundle that provides commenting functionality (posting, reading and administering comments)",
    "type": "symfony-bundle",
    "minimum-stability": "dev",
    "require-dev": {
        "phpunit/phpunit": "^5.0 || ^6.0 || ^7.0 || ^8.0",
        "movingimage/style-checker": "dev-master"
    },
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Pavle Predic",
            "email": "pavle.predic@movingimage.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "doctrine/doctrine-bundle": "^1.8",
        "friendsofsymfony/rest-bundle": "^2.2",
        "jms/serializer-bundle": "^2.1",
        "symfony/validator": "^2.7|^3.0|^4.0",
        "doctrine/orm": "^2.6",
        "doctrine/doctrine-migrations-bundle": "^1.3",
        "sonata-project/admin-bundle": "^3.32",
        "sonata-project/doctrine-orm-admin-bundle": "^3.4.2"
    },
    "autoload": {
        "psr-4": {
            "MovingImage\\Bundle\\MICommentsBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MovingImage\\Bundle\\MICommentsBundle\\Tests\\": "Tests/"
        }
    }
}
